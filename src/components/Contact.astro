---
const contactInfo = {
  email: "ransys.dev@gmail.com",
  github: "github.com/aransys",
  linkedin: "https://uk.linkedin.com/in/aurimas-ransys",
  instagram: "@aurimasran",
  location: "Leeds",
  status: "Available for new opportunities"
};
---

<section id="contact" class="contact">
  <div class="contact-box">
    <h2 class="section-title">Contact</h2>
    <div class="terminal-output">
    <div class="command-line">$ cat contact.json</div>
    <div class="output-line desktop-view">&#123;</div>
    <div class="output-line desktop-view">&nbsp;&nbsp;"email": "<a href={`mailto:${contactInfo.email}`} class="contact-link">{contactInfo.email}</a>",</div>
    <div class="output-line desktop-view">&nbsp;&nbsp;"github": "<a href={`https://${contactInfo.github}`} target="_blank" rel="noopener noreferrer" class="contact-link">{contactInfo.github}</a>",</div>
    <div class="output-line desktop-view">&nbsp;&nbsp;"linkedin": "<a href={contactInfo.linkedin} target="_blank" rel="noopener noreferrer" class="contact-link">View Profile</a>",</div>
    <div class="output-line desktop-view">&nbsp;&nbsp;"instagram": "<a href={`https://www.instagram.com/${contactInfo.instagram.substring(1)}`} target="_blank" rel="noopener noreferrer" class="contact-link">{contactInfo.instagram}</a>",</div>
    <div class="output-line desktop-view">&nbsp;&nbsp;"location": "{contactInfo.location}",</div>
    <div class="output-line desktop-view">&nbsp;&nbsp;"status": "{contactInfo.status}"</div>
    <div class="output-line desktop-view">&#125;</div>
    
    <div class="mobile-view">
      <div class="output-line">&#123;</div>
      <div class="output-line"><a href={`mailto:${contactInfo.email}`} class="contact-link">{contactInfo.email}</a></div>
      <div class="output-line"><a href={`https://${contactInfo.github}`} target="_blank" rel="noopener noreferrer" class="contact-link">{contactInfo.github}</a></div>
      <div class="output-line"><a href={contactInfo.linkedin} target="_blank" rel="noopener noreferrer" class="contact-link">LinkedIn</a></div>
      <div class="output-line"><a href={`https://www.instagram.com/${contactInfo.instagram.substring(1)}`} target="_blank" rel="noopener noreferrer" class="contact-link">{contactInfo.instagram}</a></div>
      <div class="output-line">{contactInfo.location}</div>
      <div class="output-line">{contactInfo.status}</div>
      <div class="output-line">&#125;</div>
    </div>
    </div>
    <p>Ready to build something amazing together? Let's connect and make it happen.</p>
  </div>
</section>

<style>
  .contact {
    padding: 5rem 0;
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 2rem;
    padding-right: 2rem;
  }
  
  .contact-box {
    background: var(--gray-bg);
    padding: 3rem;
    border: 1px solid var(--primary-color);
    text-align: center;
    transition: all 0.5s ease;
  }
  
  .section-title {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    text-align: center;
    position: relative;
  }
  
  .section-title::before {
    content: '// ';
    color: var(--primary-color);
    transition: color 0.5s ease;
  }
  
  .section-title::after {
    content: '';
    display: block;
    width: 100px;
    height: 2px;
    background: var(--primary-color);
    margin: 1rem auto;
    box-shadow: var(--glow);
    transition: background 0.5s ease, box-shadow 0.5s ease;
  }
  
  .terminal-output {
    background: var(--darker-bg);
    padding: 2rem;
    margin: 2rem auto;
    max-width: 800px;
    font-family: 'JetBrains Mono', monospace;
    text-align: left;
    border-left: 3px solid var(--primary-color);
    transition: all 0.5s ease;
  }
  
  .command-line {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    transition: color 0.5s ease;
  }
  
  .output-line {
    margin-bottom: 0.5rem;
    opacity: 0.9;
  }
  
  .contact-link {
    color: var(--primary-color);
    text-decoration: none;
    transition: all 0.3s ease;
    border-bottom: 1px solid transparent;
  }
  
  .contact-link:hover {
    border-bottom-color: var(--primary-color);
    text-shadow: var(--glow);
  }
  
  .mobile-view {
    display: none;
  }
  
  .desktop-view {
    display: block;
  }
  
  @media (max-width: 768px) {
    .contact {
      padding: 3rem 2rem;
    }
    
    .contact-box {
      margin: 0;
      padding: 2rem 1.5rem;
    }
    
    .section-title {
      font-size: 2rem;
      margin-bottom: 2.5rem;
    }
    
    .terminal-output {
      padding: 2rem;
      margin: 2rem 0;
    }
    
    .desktop-view {
      display: none;
    }
    
    .mobile-view {
      display: block;
    }
    
    .output-line {
      margin-bottom: 0.75rem;
      line-height: 1.6;
    }
  }
</style>

