---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content="Aurimas Ransys - Full Stack Developer Portfolio" />
    <meta name="description" content="Full Stack Developer specializing in Python, Django, JavaScript, and web development. View my projects including laundry service landing page, music explorer app, and freelance marketplace platform." />
    <meta name="keywords" content="Aurimas Ransys, Full Stack Developer, Python Developer, Django Developer, JavaScript Developer, Web Developer, Portfolio, Leeds Developer, HTML5, CSS3, PostgreSQL, REST APIs" />
    <meta name="author" content="Aurimas Ransys" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://ransys.dev/" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ransys.dev/" />
    <meta property="og:title" content="Aurimas Ransys - Full Stack Developer Portfolio" />
    <meta property="og:description" content="Full Stack Developer specializing in Python, Django, JavaScript, and web development. View my projects and skills." />
    <meta property="og:image" content="https://ransys.dev/og-image.webp" />
    <meta property="og:locale" content="en_GB" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://ransys.dev/" />
    <meta property="twitter:title" content="Aurimas Ransys - Full Stack Developer Portfolio" />
    <meta property="twitter:description" content="Full Stack Developer specializing in Python, Django, JavaScript, and web development." />
    <meta property="twitter:image" content="https://ransys.dev/og-image.webp" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Aurimas Ransys",
      "url": "https://ransys.dev/",
      "jobTitle": "Full Stack Developer",
      "description": "Full Stack Developer specializing in Python, Django, JavaScript, and web development",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Leeds",
        "addressCountry": "UK"
      },
      "sameAs": [
        "https://github.com/aransys",
        "https://uk.linkedin.com/in/aurimas-ransys",
        "https://www.instagram.com/aurimasran"
      ],
      "knowsAbout": [
        "Python",
        "Django",
        "JavaScript",
        "HTML5",
        "CSS3",
        "PostgreSQL",
        "REST APIs",
        "Web Development"
      ]
    }
    </script>
  </head>
  <body data-theme="reloaded">
    <slot />
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&display=swap');
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-tap-highlight-color: transparent;
  }
  
  button,
  a {
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select: none;
  }
  
  :root {
    --primary-color: #00d4ff;
    --secondary-color: #0096ff;
    --dark-bg: #0a0e1a;
    --darker-bg: #050810;
    --gray-bg: #1a2332;
    --light-text: #e6f2ff;
    --glow: 0 0 20px rgba(0, 212, 255, 0.3);
  }
  
  [data-theme="matrix"] {
    --primary-color: #00ff41;
    --secondary-color: #39ff14;
    --dark-bg: #0d1117;
    --darker-bg: #0a0a0a;
    --gray-bg: #1a1a1a;
    --light-text: #e6e6e6;
    --glow: 0 0 20px rgba(0, 255, 65, 0.3);
  }
  
  [data-theme="reloaded"] {
    --primary-color: #00d4ff;
    --secondary-color: #0096ff;
    --dark-bg: #0a0e1a;
    --darker-bg: #050810;
    --gray-bg: #1a2332;
    --light-text: #e6f2ff;
    --glow: 0 0 20px rgba(0, 212, 255, 0.3);
  }
  
  [data-theme="revolutions"] {
    --primary-color: #ff8c00;
    --secondary-color: #ffa500;
    --dark-bg: #1a0f0a;
    --darker-bg: #0f0805;
    --gray-bg: #2a1a10;
    --light-text: #fff5e6;
    --glow: 0 0 20px rgba(255, 140, 0, 0.3);
  }
  
  body {
    font-family: 'JetBrains Mono', monospace;
    background: linear-gradient(135deg, var(--dark-bg) 0%, var(--darker-bg) 100%);
    color: var(--light-text);
    line-height: 1.6;
    overflow-x: hidden;
    transition: background 0.5s ease, color 0.5s ease;
  }
  
  .matrix-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: auto;
    z-index: -1;
    opacity: 0.1;
    cursor: default;
  }
  
  .matrix-column {
    position: absolute;
    top: -100px;
    font-size: 12px;
    color: var(--primary-color);
    animation: matrix-fall linear infinite;
    transition: color 0.5s ease;
  }
  
  @keyframes matrix-fall {
    to {
      transform: translateY(100vh);
    }
  }
  
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease;
  }
  
  .fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .matrix-column,
    .fade-in,
    .typing-effect {
      animation: none !important;
      transition: none !important;
    }
  }
  
</style>

