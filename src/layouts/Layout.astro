---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content="Aurimas Ransys - Full Stack Developer Portfolio" />
    <meta name="description" content="Full Stack Developer specializing in Python, Django, JavaScript, and web development. View my projects including laundry service landing page, music explorer app, and freelance marketplace platform." />
    <meta name="keywords" content="Aurimas Ransys, Full Stack Developer, Python Developer, Django Developer, JavaScript Developer, Web Developer, Portfolio, Leeds Developer, HTML5, CSS3, PostgreSQL, REST APIs" />
    <meta name="author" content="Aurimas Ransys" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://ransys.dev/" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ransys.dev/" />
    <meta property="og:title" content="Aurimas Ransys - Full Stack Developer Portfolio" />
    <meta property="og:description" content="Full Stack Developer specializing in Python, Django, JavaScript, and web development. View my projects and skills." />
    <meta property="og:image" content="https://ransys.dev/og-image.webp" />
    <meta property="og:locale" content="en_GB" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://ransys.dev/" />
    <meta property="twitter:title" content="Aurimas Ransys - Full Stack Developer Portfolio" />
    <meta property="twitter:description" content="Full Stack Developer specializing in Python, Django, JavaScript, and web development." />
    <meta property="twitter:image" content="https://ransys.dev/og-image.webp" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- EmailJS -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Aurimas Ransys",
      "url": "https://ransys.dev/",
      "jobTitle": "Full Stack Developer",
      "description": "Full Stack Developer specializing in Python, Django, JavaScript, and web development",
      "image": "https://ransys.dev/og-image.webp",
      "email": "ransys.dev@gmail.com",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Leeds",
        "addressCountry": "UK"
      },
      "alumniOf": {
        "@type": "EducationalOrganization",
        "name": "Leeds Beckett University"
      },
      "sameAs": [
        "https://github.com/aransys",
        "https://uk.linkedin.com/in/aurimas-ransys",
        "https://www.instagram.com/aurimasran"
      ],
      "knowsAbout": [
        "Python",
        "Django",
        "JavaScript",
        "HTML5",
        "CSS3",
        "PostgreSQL",
        "REST APIs",
        "Web Development"
      ],
      "hasOccupation": {
        "@type": "Occupation",
        "name": "Full Stack Developer",
        "occupationLocation": {
          "@type": "City",
          "name": "Leeds"
        }
      }
    }
    </script>
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Aurimas Ransys - Full Stack Developer Portfolio",
      "url": "https://ransys.dev/",
      "author": {
        "@type": "Person",
        "name": "Aurimas Ransys"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://ransys.dev/?s={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
    </script>
  </head>
  <body data-theme="reloaded">
    <!-- Skip to main content link for keyboard navigation -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <main id="main-content">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&display=swap');
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-tap-highlight-color: transparent;
  }
  
  button,
  a {
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select: none;
  }
  
  :root {
    --primary-color: #00d4ff;
    --secondary-color: #0096ff;
    --dark-bg: #0a0e1a;
    --darker-bg: #050810;
    --gray-bg: #1a2332;
    --light-text: #e6f2ff;
    --glow: 0 0 20px rgba(0, 212, 255, 0.3);
  }
  
  [data-theme="matrix"] {
    --primary-color: #00ff41;
    --secondary-color: #39ff14;
    --dark-bg: #0d1117;
    --darker-bg: #0a0a0a;
    --gray-bg: #1a1a1a;
    --light-text: #e6e6e6;
    --glow: 0 0 20px rgba(0, 255, 65, 0.3);
  }
  
  [data-theme="reloaded"] {
    --primary-color: #00d4ff;
    --secondary-color: #0096ff;
    --dark-bg: #0a0e1a;
    --darker-bg: #050810;
    --gray-bg: #1a2332;
    --light-text: #e6f2ff;
    --glow: 0 0 20px rgba(0, 212, 255, 0.3);
  }
  
  [data-theme="revolutions"] {
    --primary-color: #ff8c00;
    --secondary-color: #ffa500;
    --dark-bg: #1a0f0a;
    --darker-bg: #0f0805;
    --gray-bg: #2a1a10;
    --light-text: #fff5e6;
    --glow: 0 0 20px rgba(255, 140, 0, 0.3);
  }
  
  /* Konami pink theme */
  [data-theme="pink"] {
    --primary-color: #ff3ea5;
    --secondary-color: #ff76c3;
    --dark-bg: #1a0a13;
    --darker-bg: #12060d;
    --gray-bg: #2a1320;
    --light-text: #ffe6f5;
    --glow: 0 0 20px rgba(255, 62, 165, 0.35);
  }
  
  body {
    font-family: 'JetBrains Mono', monospace;
    background: linear-gradient(135deg, var(--dark-bg) 0%, var(--darker-bg) 100%);
    color: var(--light-text);
    line-height: 1.6;
    overflow-x: hidden;
    transition: background 0.5s ease, color 0.5s ease;
  }
  
  .matrix-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: auto;
    z-index: -1;
    opacity: 0.1;
    cursor: default;
  }
  
  .matrix-column {
    position: absolute;
    top: -100px;
    font-size: 12px;
    color: var(--primary-color);
    animation: matrix-fall linear infinite;
    transition: color 0.5s ease;
  }
  
  @keyframes matrix-fall {
    to {
      transform: translateY(100vh);
    }
  }
  
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease;
  }
  
  .fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .matrix-column,
    .fade-in,
    .typing-effect {
      animation: none !important;
      transition: none !important;
    }
  }
  
  /* Skip Link */
  .skip-link {
    position: absolute;
    top: -100px;
    left: 0;
    background: var(--primary-color);
    color: var(--darker-bg);
    padding: 1rem 2rem;
    text-decoration: none;
    font-weight: 600;
    z-index: 10000;
    transition: top 0.3s ease;
  }
  
  .skip-link:focus {
    top: 0;
    outline: 3px solid var(--secondary-color);
    outline-offset: 2px;
  }
  
  main {
    outline: none;
  }
  
  main:focus {
    outline: none;
  }
  
  /* Neo modal (Konami) */
  .neo-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s ease;
    z-index: 1000;
  }
  .neo-backdrop.show {
    opacity: 1;
    visibility: visible;
  }
  .neo-status {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -45%);
    width: min(520px, 92vw);
    background: var(--darker-bg);
    border: 1px solid var(--primary-color);
    box-shadow: var(--glow);
    border-radius: 8px;
    padding: 2rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s ease;
    z-index: 1001;
  }
  .neo-status.show {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, -50%);
  }
  .neo-status .status-icon {
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }
  .neo-status .status-title {
    font-size: 1.1rem;
    letter-spacing: 1px;
    margin-bottom: 0.25rem;
  }
  .neo-status .status-subtitle {
    color: var(--light-text);
    opacity: 0.8;
    margin-bottom: 1rem;
  }
  .neo-status .status-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
  }
  .neo-status .btn {
    background: transparent;
    border: 1px solid var(--primary-color);
    color: var(--light-text);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.2s ease, color 0.2s ease;
  }
  .neo-status .btn:hover {
    background: var(--primary-color);
    color: var(--darker-bg);
  }
  
</style>

